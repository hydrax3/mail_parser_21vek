{
    "name": "notification-app",
    "version": "1.0.0",
    "description": "Десктопное приложение для оповещений о статусах писем",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder --win"
    },
    "keywords": [
        "electron",
        "notifications",
        "email"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "dependencies": {
        "googleapis": "^129.0.0",
        "dotenv": "^16.3.1"
    },
    "build": {
        "appId": "com.mailradar.app",
        "productName": "MailRadar",
        "win": {
            "target": "nsis",
            "icon": "assets/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "artifactName": "${productName} Setup ${version}.${ext}"
        },
        "files": [
            "**/*",
            "!node_modules/**/README*",
            "!node_modules/**/CHANGELOG*"
        ],
        "extraResources": [
            {
                "from": "../credentials.json",
                "to": "credentials.json"
            },
            {
                "from": "../.env",
                "to": ".env"
            }
        ]
    }
}